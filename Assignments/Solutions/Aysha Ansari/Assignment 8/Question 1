class Solution{
public:	
	// swap k'th element from beginning and end
	void swapKth(int *arr, int n, int k) {
	    // code here
	    int m,t,i;
	    m=k-1;
	    for( i=0;i<n;i++){
	        if(i==m){
	            t=arr[i];
	            arr[i]=arr[n-i-1];
	            arr[n-i-1]=t;
	        }
	    }
	}
};
